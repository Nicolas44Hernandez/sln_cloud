    "version": "0.2.0",
    "configurations": [
        {
            "name": "Create DB",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/db_manage.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_ENV": "DEVELOPMENT",
            },
            "args": [
                "create"
            ]
        },
        {
            "name": "Delete DB",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/db_manage.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_ENV": "DEVELOPMENT",
            },
            "args": [
                "delete"
            ]
        },
        {
            "name": "Run backend in dev",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend/server/app:create_app()",
                "FLASK_ENV": "DEVELOPMENT",
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "5000",
                "--no-reload",
            ]
        }
    ]
}